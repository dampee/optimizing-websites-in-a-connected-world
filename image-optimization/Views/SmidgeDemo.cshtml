@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Website>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = null;

    SmidgeHelper
        .CreateCssBundle("css-master")
        .RequiresCss("~/Assets/theme.css");
    SmidgeHelper.CreateCssBundle("css-defer")
        .RequiresCss("~/Assets/theme-defer.css");
}

<!DOCTYPE html>
<head>
    <title>Slimsy demo</title>
   
</head>
<body lang="en">
<h1>@Model.Name</h1>
<p>@Model.Description</p>
<hr>
<div style="display: flex; gap: 10px;">
    <div class="col">
        <h1>Full image</h1>

        <slimsy-picture
            media-item="@Model.Image"
            width="323" height="300"
            css-class="myClass" render-lqip="true"
            render-webp-alternative="true">
        </slimsy-picture>

    </div>
    <div class="col">
        <h1>Thumbnail</h1>
        <img src="@Model.Image.GetCropUrl(width: 400)" alt="@Model.Image.Name"/>
    </div>
    <div class="col">
        <h1>Thumbnail (webp)</h1>
        <img src="@Model.Image.GetCropUrl(width: 400, furtherOptions: "&format=webp")" alt="@Model.Image.Name"/>
    </div>
</div>
@SmidgeHelper.JsHereAsync()
@SmidgeHelper.JsHereAsync("blockgird")
</body>